{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Perfil list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tipodocumento</th>
                <th>Numerodocumento</th>
                <th>Ciudad</th>
                <th>Nombres</th>
                <th>Apellidos</th>
                <th>Fechanacimiento</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('perfil_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.tipoDocumento }}</td>
                <td>{{ entity.numeroDocumento }}</td>
                <td>{{ entity.ciudad }}</td>
                <td>{{ entity.nombres }}</td>
                <td>{{ entity.apellidos }}</td>
                <td>{% if entity.fechaNacimiento %}{{ entity.fechaNacimiento|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('perfil_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('perfil_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('perfil_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
